{
  "name": "smart-clipboard",
  "displayName": "Smart Clipboard",
  "repository": "https://github.com/gziz/smart-clipboard",
  "publisher": "gziz",
  "description": "Copy the file path and selected code to the clipboard as markdown. This is useful for note-taking apps such as Notion or Obsidian.",
  "version": "0.0.1",
  "icon": "resources/smart-clipboard.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smart-clipboard.getSmartLink",
        "title": "Get Smart Link"
      },
      {
        "command": "smart-clipboard.getSmartCode",
        "title": "Get Smart Copy"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Smart Clipboard Configuration",
      "properties": {
        "smartClipboard.redirect": {
          "type": "boolean",
          "default": true,
          "description": "Append HTTPS prefix to make the extension work with Notion"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}
